{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-typescript/base",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "arrow-body-style": "off",
    "no-console": "off",
    "import/prefer-default-export": "off",
    "@typescript-eslint/indent": "off",
    "prefer-const": "off",
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "class-methods-use-this": "warn"
  }
}
